.side_bar
  .side_bar__user
    .side_bar__user_box
      .side_bar__user_name
        = current_user.name
      .side_bar__user-icons
        = link_to new_group_path ,class:"left-icon" do
          = icon('far', 'edit')
        = link_to edit_user_path(current_user.id) ,class:"right-icon" do
          = icon('fa', 'cog')
  .side_bar__group_list
    - current_user.groups.each do |group|
      .side_bar__group_index
        = link_to "#" do
          .group_sname
            = group.name
          .group_message
            まだメッセージはありません